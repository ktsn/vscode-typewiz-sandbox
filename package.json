{
  "name": "vscode-typewiz",
  "displayName": "TypeWiz",
  "version": "0.0.0",
  "author": "katashin",
  "description": "Automatically discover and add missing types in your TypeScript code in VSCode",
  "keywords": [
    "TypeScript",
    "types",
    "format"
  ],
  "license": "MIT",
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "files": [
    "lib"
  ],
  "homepage": "https://github.com/ktsn/vscode-typewiz",
  "bugs": "https://github.com/ktsn/vscode-typewiz/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/ktsn/vscode-typewiz.git"
  },
  "engines": {
    "vscode": "^1.21.0"
  },
  "categories": [
    "Formatters"
  ],
  "publisher": "ktsn",
  "activationEvents": [
    "onLanguage:typescript"
  ],
  "scripts": {
    "vscode:prepublish": "npm run clean && npm run test && npm run build",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "clean": "rm -rf lib",
    "build": "tsc -p src",
    "dev": "jest --watch",
    "lint": "tslint -p . && prettier --list-different \"{src,scripts,test}/**/*.{js,ts}\"",
    "format": "prettier --write \"{src,scripts,test}/**/*.{js,ts}\"",
    "test": "npm run lint && npm run test:unit",
    "test:unit": "jest"
  },
  "jest": {
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testRegex": "/test/.+\\.spec\\.(js|ts)$",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "globals": {
      "ts-jest": {
        "tsConfigFile": "test/tsconfig.json"
      }
    }
  },
  "devDependencies": {
    "@types/jest": "^22.2.0",
    "jest": "^22.4.2",
    "prettier": "1.11.0",
    "ts-jest": "^22.4.1",
    "tslint": "^5.9.1",
    "tslint-config-ktsn": "^2.1.0",
    "tslint-config-prettier": "^1.9.0",
    "typescript": "^2.7.2",
    "vscode": "^1.1.13"
  }
}
